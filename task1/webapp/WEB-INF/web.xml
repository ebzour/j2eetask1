<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>J2EETask1</display-name>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.eyas.web.LoginServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>com.eyas.web.LogoutServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>view_employees</servlet-name>
		<servlet-class>com.eyas.web.ViewEmployeesServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>create_employee</servlet-name>
		<servlet-class>com.eyas.web.CreateEmployeeServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>create_task</servlet-name>
		<servlet-class>com.eyas.web.CreateTaskServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>view_tasks</servlet-name>
		<servlet-class>com.eyas.web.ViewTasksServlet</servlet-class>
	</servlet>
		
	<servlet>
		<servlet-name>update_tasks</servlet-name>
		<servlet-class>com.eyas.web.UpdateTasksServlet</servlet-class>
	</servlet>
	
	<servlet>
	<servlet-name>update_employees</servlet-name>
		<servlet-class>com.eyas.web.UpdateEmployeesServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>view_employees</servlet-name>
		<url-pattern>/view_employees</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>create_employee</servlet-name>
		<url-pattern>/create_employee</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>update_employees</servlet-name>
		<url-pattern>/update_employees</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>view_tasks</servlet-name>
		<url-pattern>/view_tasks</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>create_task</servlet-name>
		<url-pattern>/create_task</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>update_tasks</servlet-name>
		<url-pattern>/update_tasks</url-pattern>
	</servlet-mapping>
	
</web-app>